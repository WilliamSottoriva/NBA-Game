<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="controller.AssociationController" styleClass="background" prefHeight="420.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">
    
    <ImageView fitWidth="600.0" fitHeight="220.0">
        <image>
            <Image url="view/NBA_Back.jpg"/>
        </image>
    </ImageView>
    <GridPane fx:id="buttonGrid" alignment="center" vgap="30" hgap="20">
        <Button fx:id="exploreTeamsButton" text="Explore the teams" onAction="#exploreTeams" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button fx:id="newSeasonButton" text="Arrange a new season" onAction="#newSeason" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <Button fx:id="exitButton" text="Exit" onAction="#exit" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
