<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>	
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?> 
<?import javafx.geometry.*?>

<VBox fx:controller="controller.PlayerUpdateController" alignment="CENTER" styleClass="background" prefHeight="400.0" prefWidth="600.0" spacing="20" 
      xmlns:fx="http://javafx.com/fxml/1">
    
    <GridPane  alignment="center" hgap="10" style="-fx-padding: 20 115 5 115">
        <Label styleClass="label-h2" text="Player Details" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
        <Label styleClass="label-opac" text="Player Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField   minWidth="230" fx:id="nameTf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label styleClass="label-opac" text="Player Credit: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="creditTf" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label styleClass="label-opac" text="Player Age:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="ageTf" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label styleClass="label-opac" text="Player No:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="noTf"  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
    

    <HBox alignment="center" spacing="5">
        <Button fx:id="update" text="Update" onAction="#update"/>
        <Button fx:id="add" text="Add" onAction="#add"/>
        <Button fx:id="close" text="Close" onAction="#close"/>
    </HBox>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>

